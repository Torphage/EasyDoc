{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "outDir": "out",
        "lib": [
            "es2018",
            "es2018.regexp",
            "es2018.promise",
            "es2018.intl"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    }
}