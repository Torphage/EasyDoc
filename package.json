{
    "name": "easydoc",
    "displayName": "EasyDoc",
    "description": "Makes custom formats of documentations of functions, classes, etc. for different languages extremely easy",
    "version": "0.5.3",
    "publisher": "Torphage",
    "license": "MIT",
    "categories": [
        "Snippets",
        "Formatters"
    ],
    "icon": "resources/images/logo.png",
    "galleryBanner": {
        "color": "#282C34",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/torphage/easydoc.git"
    },
    "homepage": "https://github.com/Torphage/EasyDoc/blob/master/README.md",
    "activationEvents": [
        "*"
    ],
    "engines": {
        "vscode": "^1.27.0"
    },
    "main": "./out/extension",
    "contributes": {
        "keybindings": [
            {
                "command": "extension.EasyDoc",
                "key": "ctrl+shift+alt+z",
                "max": "cmd+shift+alt+z"
            }
        ],
        "commands": [
            {
                "command": "extension.EasyDoc",
                "title": "EasyDoc"
            }
        ],
        "configuration": {
            "title": "EasyDoc configurations",
            "properties": {
                "EasyDoc.dir": {
                    "type": "array",
                    "default": [
                        "./templates"
                    ]
                },
                "EasyDoc.testing": {
                    "type": "object",
                    "default": {
                        "commentAboveTarget": false,
                        "docType": "function",
                        "triggerString": "EasyDoc_testing"
                    }
                },
                "EasyDoc.tomdoc": {
                    "type": "object",
                    "default": {
                        "commentAboveTarget": true,
                        "docType": "function",
                        "triggerString": "###"
                    }
                },
                "EasyDoc.for_each": {
                    "type": "object",
                    "default": {
                        "commentAboveTarget": false,
                        "docType": "block",
                        "triggerString": "$$$"
                    }
                },
                "EasyDoc.jsdoc": {
                    "type": "object",
                    "default": {
                        "commentAboveTarget": true,
                        "docType": "function",
                        "triggerString": "///"
                    }
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "extension.EasyDoc",
                    "group": "EasyDoc@1"
                }
            ]
        }
    },
    "scripts": {
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "unit_test": "mocha -r ts-node/register 'test/**/*.spec.ts'"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.5",
        "tslint": "^5.13.0",
        "typedoc": "^0.13.0",
        "typescript": "^3.3.3",
        "vscode": "^1.1.26"
    },
    "dependencies": {
        "fs": "0.0.1-security",
        "path": "^0.12.7"
    }
}
